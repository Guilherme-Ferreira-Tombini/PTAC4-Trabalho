<div class="container p-2">
  <div class="card p-4 m-3">


    <h1 class="text-center">Editar Produto</h1>

    <form action="/update_produto" method="post">
        <div class="form-group">
             <input type="hidden" name="id" value="{{id}}">
            <label for="exampleInputEmail1">Nome do produto</label>
            <input type="text" value="{{nome_produto}}" class="form-control" placeholder="Digite o nome do produto" id="nome_produto" name="nome_produto">
          </div>
        <div class="form-group mt-2">
          <label for="exampleInputEmail1">Preço do produto</label>
          <input type="text" value="{{preco}}" class="form-control" name="preco" id="preco" placeholder="Digite o preço do produto (APENAS NÚMEROS)">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Imagem do produto</label>
          <input type="text" value="{{imagem}}" class="form-control" name="imagem" id="imagem" placeholder="Digite o preço do produto">
        </div>
        <button type="submit" class="btn btn-warning mt-3">Salvar Alterações</button>
      </form>

    </div>
    </div>
</div>